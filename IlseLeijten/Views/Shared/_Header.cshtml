@using Infrastructure
<header>
    <div class="languages">
    </div>
    <div class="row col-md-offset-1 col-md-8" id="welcome">
        @Resources.Website.Header_Welcome
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row col-md-offset-1 col-md-10">
                <div class="navbar-header">
                    <span id="signature">
                        <a href="/"><img class="signature" src="~/Content/sig.gif" /></a>
                    </span>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse navbar-right collapse">
                    <ul class="nav navbar-nav">
                        @Html.MenuItem(Resources.Website.Navigation_Welcome, "Index", "Home")
                        @Html.MenuItem(Resources.Website.Navigation_About, "About", "Home")
                        @Html.MenuItem(Resources.Website.Navigation_Portfolio, "Paintings", "Home")
                        @Html.MenuItem(Resources.Website.Navigation_Links, "Links", "Home")
                        @Html.MenuItem(Resources.Website.Navigation_Contact, "Contact", "Home")
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
