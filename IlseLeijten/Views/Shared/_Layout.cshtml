@using Infrastructure
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="keywords" content="art, abstract, paintings, mixed-media, artist" />
    <meta name="description" content="Ilse Leijten is a mixed media artist, living in the Seattle area. This website shows a collection of her paintings, drawings and photos." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ilse Leijten</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row col-md-offset-1 col-md-10">
                <div class="navbar-header">
                    <span id="signature">
                        <a href="/"><img class="signature" src="~/Content/sig.gif" /></a>
                    </span>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse navbar-right collapse">
                    <ul class="nav navbar-nav">
                        @Html.MenuItem("Welcome", "Index", "Home")
                        @Html.MenuItem("About", "About", "Home")
                        @Html.MenuItem("Portfolio", "Paintings", "Home")
                        @Html.MenuItem("Links", "Links", "Home")
                        @Html.MenuItem("Contact", "Contact", "Home")
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row col-md-offset-1 col-md-10">
            <div id="welcome">Welcome to my website</div>
            @RenderBody()
        </div>
        <hr />
    </div>

    <footer class="footer">
        <p class="text-muted copyright"><a href="@Url.Action("Manage", ViewContext.RouteData.GetRequiredString("action"))" title="Manage site" id="manage">
    <span class="glyphicon glyphicon-cog"></span></a> &copy; @DateTime.Now.Year - Ilse Leijten, All rights reserved</p>
        <div class="social-bar"><span class="social-item"><div class="fb-like fb_iframe_widget" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-font="segoe ui" fb-xfbml-state="rendered" fb-iframe-plugin-query="app_id=&amp;font=segoe%20ui&amp;href=http%3A%2F%2Fwww.ilseleijten.com&amp;layout=button_count&amp;locale=en_US&amp;sdk=joey&amp;send=false&amp;show_faces=false&amp;width=450"><span style="vertical-align: bottom; width: 76px; height: 20px;"><iframe name="f320af1508" width="450px" height="1000px" frameborder="0" allowtransparency="true" scrolling="no" title="fb:like Facebook Social Plugin" src="//www.facebook.com/plugins/like.php?app_id=&amp;channel=http%3A%2F%2Fstatic.ak.facebook.com%2Fconnect%2Fxd_arbiter%2FDU1Ia251o0y.js%3Fversion%3D41%23cb%3Df115d3a5c4%26domain%3Dwww.ilseleijten.com%26origin%3Dhttp%253A%252F%252Fwww.ilseleijten.com%26relation%3Dparent.parent&amp;font=segoe%20ui&amp;href=http%3A%2F%2Fwww.ilseleijten.com&amp;layout=button_count&amp;locale=en_US&amp;sdk=joey&amp;send=false&amp;show_faces=false&amp;width=450" style="border: none; visibility: visible; width: 76px; height: 20px;" class=""></iframe></span></div></span><span class="social-item"><iframe id="twitter-widget-0" scrolling="no" frameborder="0" allowtransparency="true" src="//platform.twitter.com/widgets/tweet_button.67ae45a68af44ab435dd5797206058d3.en.html#_=1422941780864&amp;count=horizontal&amp;dnt=true&amp;id=twitter-widget-0&amp;lang=en&amp;original_referer=http%3A%2F%2Fwww.ilseleijten.com&amp;size=m&amp;text=Website%20Ilse%20Leijten&amp;url=http%3A%2F%2Fwww.ilseleijten.com" class="twitter-share-button twitter-tweet-button twitter-share-button twitter-count-horizontal" title="Twitter Tweet Button" data-twttr-rendered="true" style="width: 109px; height: 20px;"></iframe></span></div>
    </footer>

    <script type="application/ld+json">
        {
        "@@context" : "http://schema.org",
        "@@type" : "Person",
        "name" : "Ilse Leijten",
        "url" : "http://www.ilseleijten.com",
        "sameAs" : [ https://ilseleijten.wordpress.com/, 
        "https://www.facebook.com/pages/Ilse-Leijten-Mixed-Media-Artist/174993529276730",
        "https://www.linkedin.com/profile/view?id=393101629"]
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
