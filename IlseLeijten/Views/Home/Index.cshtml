@model IlseLeijten.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="alert-info fade in alert " id="alert-info" style="display:none;">
        <button type="button" class="close">×</button>
        <p id="alert-message"></p>
    </div>
<img src="@Model.FrontPageImage" />

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            {
                var showAlert = '@(Model.AlertMessage)';
                if (showAlert == "success") {
                    $('#alert-message').html("<strong>Thank you </strong>for your message!")
                    $("#alert-info").removeClass('alert-error').addClass('alert-info').show();
                }
                if (showAlert == "failure") {
                    $('#alert-message').html("<strong>Sorry, </strong>something went wrong!")
                    $("#alert-info").removeClass('alert-info').addClass('alert-danger').show();
                }
            }
        });
    </script>
}
